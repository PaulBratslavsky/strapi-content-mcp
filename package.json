{
  "name": "strapi-content-mcp",
  "version": "0.1.0",
  "description": "A Strapi v5 plugin that exposes your content via the Model Context Protocol (MCP), enabling AI assistants like Claude to interact directly with your Strapi content.",
  "keywords": [
    "strapi",
    "strapi-plugin",
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "anthropic",
    "cms",
    "headless-cms",
    "content-api"
  ],
  "homepage": "https://github.com/PaulBrats662/strapi-content-mcp#readme",
  "bugs": {
    "url": "https://github.com/PaulBrats662/strapi-content-mcp/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PaulBrats662/strapi-content-mcp.git"
  },
  "type": "commonjs",
  "exports": {
    "./package.json": "./package.json",
    "./strapi-admin": {
      "types": "./dist/admin/src/index.d.ts",
      "source": "./admin/src/index.ts",
      "import": "./dist/admin/index.mjs",
      "require": "./dist/admin/index.js",
      "default": "./dist/admin/index.js"
    },
    "./strapi-server": {
      "types": "./dist/server/src/index.d.ts",
      "source": "./server/src/index.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "strapi-plugin build",
    "watch": "strapi-plugin watch",
    "watch:link": "strapi-plugin watch:link",
    "verify": "strapi-plugin verify",
    "test:ts:front": "run -T tsc -p admin/tsconfig.json",
    "test:ts:back": "run -T tsc -p server/tsconfig.json"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@strapi/design-system": "^2.0.0-rc.30",
    "@strapi/icons": "^2.0.0-rc.30",
    "react-intl": "^8.0.3",
    "zod": "^4.0.0"
  },
  "bundledDependencies": [
    "@modelcontextprotocol/sdk",
    "zod"
  ],
  "devDependencies": {
    "@strapi/strapi": "^5.32.0",
    "@strapi/sdk-plugin": "^5.3.2",
    "prettier": "^3.7.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "styled-components": "^6.1.19",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@strapi/typescript-utils": "^5.32.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@strapi/strapi": "^5.32.0",
    "@strapi/sdk-plugin": "^5.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "styled-components": "^6.1.19"
  },
  "strapi": {
    "kind": "plugin",
    "name": "strapi-content-mcp",
    "displayName": "Strapi Content MCP",
    "description": "Expose Strapi Content via MCP"
  },
  "license": "MIT",
  "author": "Paul Bratslavsky <paul.bratslavsky@strapi.io>",
  "engines": {
    "node": ">=18.0.0"
  }
}
